@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.ContactPage>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
	Layout = "LayoutWithBreadcrumb.cshtml";
	
	var contactForm = new Crito.Models.ContactForm();
}

<section class="contactinfo-section">
    <div class="container">
          <div class="infobox">
              <div class="black-circle"><i class="fa-sharp fa-regular fa-location-dot"></i></div>
              <h5>Visit us</h5>
              <div class="info">
                  <p>@Model.Value("contactUsStreetName") @Model.Value("contactUsStreetNumber")</p>
                  <p>@Model.Value("contactUsPostalCode") @Model.Value("contactUsCity")</p>
              </div>
          </div>
          <div class="infobox">
              <div class="black-circle"><i class="fa-regular fa-phone-volume"></i></div>
              <h5>Call us</h5>
              <div class="info">
                  <p>@Model.Value("contactUsPhoneNumber1")</p>
                  <p>@Model.Value("contactUsPhoneNumber2")</p>
              </div>
          </div>
          <div class="infobox">
              <div class="black-circle"><i class="fa-regular fa-envelope"></i></div>
              <h5>Email us</h5>
              <div class="info">
                  <p>@Model.Value("contactUsEmailAddress1")</p>
                  <p>@Model.Value("contactUsEmailAddress2")</p>
              </div>
          </div>
    </div>
</section>

<section class="contactform-section">
    <div class="container">
        <h2>Leave us a message for any information.</h2>
        
        @using(Html.BeginUmbracoForm("Index", "Contact", FormMethod.Post))
        {        
            <div asp-validation-summary="ModelOnly"></div>
            
            <input asp-for="@contactForm.Name" name="name" type="text" placeholder="Name*">
            <input asp-for="@contactForm.Email" name="email" type="email" placeholder="Email*">
            <textarea asp-for="@contactForm.Message" name="message" placeholder="Your Message*"></textarea>
            
            <div class="d-grid">
                <button type="submit" class="btn-theme">Send Message <i class="fa-solid fa-arrow-up-right"></i></button>
.           </div>
        }
        
    </div>
</section>

<div style="max-width:100%;list-style:none; transition: none;overflow:hidden;width:100%;height:500px;">
    <div id="g-mapdisplay" style="height:100%; width:100%;max-width:100%;">
        <iframe style="height:100%;width:100%;border:0;" frameborder="0" src="@Model.Value("googleMapsURL")"></iframe>
    </div>
    <a class="google-map-html" href="https://www.bootstrapskins.com/themes" id="grab-maps-authorization"></a>
    <style>#g-mapdisplay .text-marker{}.map-generator{max-width: 100%; max-height: 100%; background: none;
    </style>
</div>